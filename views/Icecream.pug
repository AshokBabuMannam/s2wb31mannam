extends layout
block content
  h1= title
  p Welcome to the icemagic 
  div(class="container-fluid")
        div(class="row")
            -
                let Icecream  = [
                    {
                        "Itemname": "Vennela",
                        "Quantity": 10,
                        "price": "Five USD"
                    },
                    {
                        "Itemname": "Strawberry",
                        "Quantity": 20,
                        "price": "Ten USD"
                    },
                    {
                        "Itemname": "Mango",
                        "Quantity": 30,
                        "price": "Twenty USD"
                    },                   
                ]
            each v,index in Icecream
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }